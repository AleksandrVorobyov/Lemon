        input.login__form-input(type="email", name="form-email" placeholder='email')
        input.login__form-input(type="password", name="form-password" placeholder='password')
        .login__form-inner 
            input.login__form-inner-checkbox(type="checkbox", name="form-checkbox" id='login-remember-me')
            label.login__form-checkbox(for="login-remember-me")
                span.login__fake-checkbox
                span Remember me
            a(href="#").login__form-inner-link Forgot your password ?
    .login__form-link
        +button('#', "LOGIN")
